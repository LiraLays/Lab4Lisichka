<Window x:Class="WpfLab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab4"
        mc:Ignorable="d"
        Title="Лабораторная работа №4" Height="635" Width="810" Background="#FF000C18" ResizeMode="NoResize">
    <Window.Resources>

        <Style x:Key="GlowButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Outer Glow Effect -->
                            <Border x:Name="outerGlow"
                        Background="Transparent"
                        BorderBrush="#FF84FFD9"
                        BorderThickness="2"
                        Margin="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="15" 
                                          Color="#FF84FFD9"
                                          Opacity="0.6"/>
                                </Border.Effect>
                            </Border>

                            <!-- Main Border -->
                            <Border x:Name="mainBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="8" 
                                          Color="#FF84FFD9"
                                          Opacity="0.4"/>
                                </Border.Effect>

                                <ContentPresenter x:Name="contentPresenter"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="10" 
                                              Color="#FF84FFD9"
                                              Opacity="0.8"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Enhanced glow on hover -->
                                <Setter TargetName="outerGlow" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="20" 
                                              Color="#FF84FFD9"
                                              Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="12" 
                                              Color="#FF84FFD9"
                                              Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="15" 
                                              Color="#FF84FFD9"
                                              Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="outerGlow" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border x:Name="mainBorder"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" 
                                BlurRadius="10" 
                                Color="#FF84FFD9"
                                Opacity="0.5"/>
                            </Border.Effect>

                            <DockPanel>
                                <!-- Header with glow -->
                                <ToggleButton x:Name="HeaderSite"
                          DockPanel.Dock="Top"
                          Content="{TemplateBinding Header}"
                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                          FontFamily="{TemplateBinding FontFamily}"
                          FontSize="{TemplateBinding FontSize}"
                          FontWeight="{TemplateBinding FontWeight}"
                          Foreground="{TemplateBinding Foreground}"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                          Padding="10,8">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="headerBorder"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="0"
                                  Padding="{TemplateBinding Padding}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Expand/Collapse Arrow with glow -->
                                                    <Border x:Name="arrowBorder"
                                          Grid.Column="0"
                                          Width="16"
                                          Height="16"
                                          Margin="0,0,8,0"
                                          Background="Transparent">
                                                        <Path x:Name="arrowPath"
                                            Fill="#FF84FFD9"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M 0,0 L 8,8 L 16,0 Z">
                                                            <Path.Effect>
                                                                <DropShadowEffect ShadowDepth="0"
                                                                BlurRadius="8"
                                                                Color="#FF84FFD9"
                                                                Opacity="0.8"/>
                                                            </Path.Effect>
                                                        </Path>
                                                    </Border>

                                                    <!-- Header Content with glow -->
                                                    <ContentPresenter x:Name="headerContent"
                                                    Grid.Column="1"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                                        <ContentPresenter.Effect>
                                                            <DropShadowEffect ShadowDepth="0"
                                                            BlurRadius="8"
                                                            Color="#FF84FFD9"
                                                            Opacity="0.8"/>
                                                        </ContentPresenter.Effect>
                                                    </ContentPresenter>
                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="headerBorder" Property="Background" Value="#1A84FFD9"/>
                                                    <Setter TargetName="headerContent" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter TargetName="arrowPath" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="arrowPath" Property="Data" Value="M 0,8 L 8,0 L 16,8 Z"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <!-- Expandable Content -->
                                <ContentPresenter x:Name="ContentSite"
                              DockPanel.Dock="Bottom"
                              Visibility="Collapsed"
                              Margin="10,5,10,10"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="#FF001830"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

