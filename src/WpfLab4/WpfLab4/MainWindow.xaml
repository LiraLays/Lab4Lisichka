            <Setter Property="BorderBrush" Value="#FF859cff"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF859cff" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Main content border with glow -->
                            <Border x:Name="mainBorder"
                        Grid.Column="0"
                        Grid.Row="0"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.5"/>
                                </Border.Effect>

                                <!-- Scroll content -->
                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                            CanContentScroll="{TemplateBinding CanContentScroll}"
                                            CanHorizontallyScroll="False"
                                            CanVerticallyScroll="False"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Content="{TemplateBinding Content}"
                                            Margin="{TemplateBinding Padding}"/>
                            </Border>

                            <!-- Vertical ScrollBar - Thinner and rounded -->
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                           Grid.Column="1"
                           Grid.Row="0"
                           Orientation="Vertical"
                           Value="{TemplateBinding VerticalOffset}"
                           Maximum="{TemplateBinding ScrollableHeight}"
                           ViewportSize="{TemplateBinding ViewportHeight}"
                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}">
                                <ScrollBar.Style>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter Property="Foreground" Value="#FF84FFD9"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Width" Value="10"/>
                                        <Setter Property="MinWidth" Value="10"/>
                                        <Setter Property="Margin" Value="2,0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid x:Name="Bg" 
                                              Background="Transparent"
                                              SnapsToDevicePixels="true">
                                                        <Track x:Name="PART_Track" 
                                                   IsDirectionReversed="true">
                                                            <Track.Thumb>
                                                                <Thumb x:Name="Thumb"
                                                           Background="#FF84FFD9"
                                                           BorderBrush="#FF84FFD9">
                                                                    <Thumb.Template>
                                                                        <ControlTemplate TargetType="Thumb">
                                                                            <Border x:Name="thumbBorder" 
                                                                        Background="{TemplateBinding Background}" 
                                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                                        BorderThickness="0"
                                                                        CornerRadius="5"
                                                                        Margin="1,2">
                                                                                <Border.Effect>
                                                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                                                                </Border.Effect>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="thumbBorder" Property="Background" Value="#FF84FFD9"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Margin" Value="1,1"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Effect">
                                                                                        <Setter.Value>
                                                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </Trigger>
                                                                                <Trigger Property="IsDragging" Value="True">
                                                                                    <Setter TargetName="thumbBorder" Property="Background" Value="#FF84FFD9"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Margin" Value="0,1"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Thumb.Template>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Command="ScrollBar.PageUpCommand" 
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 Focusable="False"/>
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Command="ScrollBar.PageDownCommand" 
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 Focusable="False"/>
                                                            </Track.IncreaseRepeatButton>
                                                        </Track>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Thumb" Property="Background" Value="#FF84FFD9"/>
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="Thumb" Property="Background" Value="#7F84FFD9"/>
                                                            <Setter TargetName="Thumb" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollBar.Style>
                            </ScrollBar>

                            <!-- Horizontal ScrollBar - Thinner and rounded -->
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                           Grid.Column="0"
                           Grid.Row="1"
                           Orientation="Horizontal"
                           Value="{TemplateBinding HorizontalOffset}"
                           Maximum="{TemplateBinding ScrollableWidth}"
                           ViewportSize="{TemplateBinding ViewportWidth}"
                           Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}">
                                <ScrollBar.Style>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter Property="Foreground" Value="#FF84FFD9"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Height" Value="10"/>
                                        <Setter Property="MinHeight" Value="10"/>
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid x:Name="Bg" 
                                              Background="Transparent"
                                              SnapsToDevicePixels="true">
                                                        <Track x:Name="PART_Track" 
                                                   IsDirectionReversed="false">
                                                            <Track.Thumb>
                                                                <Thumb x:Name="Thumb"
                                                           Background="#FF84FFD9"
                                                           BorderBrush="#FF84FFD9">
                                                                    <Thumb.Template>
                                                                        <ControlTemplate TargetType="Thumb">
                                                                            <Border x:Name="thumbBorder" 
                                                                        Background="{TemplateBinding Background}" 
                                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                                        BorderThickness="0"
                                                                        CornerRadius="5"
                                                                        Margin="2,1">
                                                                                <Border.Effect>
                                                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                                                                </Border.Effect>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="thumbBorder" Property="Background" Value="#FF84FFD9"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Margin" Value="1,1"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Effect">
                                                                                        <Setter.Value>
                                                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </Trigger>
                                                                                <Trigger Property="IsDragging" Value="True">
                                                                                    <Setter TargetName="thumbBorder" Property="Background" Value="#FF84FFD9"/>
                                                                                    <Setter TargetName="thumbBorder" Property="Margin" Value="1,0"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Thumb.Template>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Command="ScrollBar.PageLeftCommand" 
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 Focusable="False"/>
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Command="ScrollBar.PageRightCommand" 
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 Focusable="False"/>
                                                            </Track.IncreaseRepeatButton>
                                                        </Track>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Thumb" Property="Background" Value="#FF84FFD9"/>
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="Thumb" Property="Background" Value="#7F84FFD9"/>
                                                            <Setter TargetName="Thumb" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollBar.Style>
                            </ScrollBar>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingStatusBarStyle" TargetType="StatusBar">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2,2,2,2"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="StatusBar">
                        <Border x:Name="mainBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4,4,0,0"
                        SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.5"/>
                            </Border.Effect>

                            <Grid>
                                <ItemsPresenter x:Name="ItemsPresenter"
                                        Margin="{TemplateBinding Padding}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingStatusBarItemStyle" TargetType="StatusBarItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="StatusBarItem">
                        <Border x:Name="itemBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="itemBorder" Property="Background" Value="#1A84FFD9"/>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundHelpButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Outer Glow Effect -->
                            <Border x:Name="outerGlow"
                            Background="Transparent"
                            BorderBrush="#FF84FFD9"
                            BorderThickness="2"
                            CornerRadius="20">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="15" 
                                      Color="#FF84FFD9"
                                      Opacity="0.6"/>
                                </Border.Effect>
                            </Border>

                            <!-- Main Border -->
                            <Border x:Name="mainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="8" 
                                      Color="#FF84FFD9"
                                      Opacity="0.4"/>
                                </Border.Effect>

                                <ContentPresenter x:Name="contentPresenter"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="{TemplateBinding Padding}"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="10" 
                                          Color="#FF84FFD9"
                                          Opacity="0.8"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Enhanced glow on hover -->
                                <Setter TargetName="outerGlow" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="20" 
                                          Color="#FF84FFD9"
                                          Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="12" 
                                          Color="#FF84FFD9"
                                          Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="15" 
                                          Color="#FF84FFD9"
                                          Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="outerGlow" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="HelpButton" 
Content="?" 
Style="{StaticResource RoundHelpButtonStyle}"
Click="HelpButton_Click"
HorizontalAlignment="Right" 
VerticalAlignment="Top"
Margin="5"
Width="40" 
Height="40"
Panel.ZIndex="1000"/>
        <!-- Заголовок -->
        <TextBlock Text="Логические функции" Grid.Row="0"  FontSize="24" FontWeight="Bold" Margin="0,0,0,10"  TextAlignment="Center" Style="{StaticResource GlowingTextBlockStyle}"/>

        <!-- Основная область -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Style="{StaticResource GlowingScrollViewerStyle}" Margin="2">
            <StackPanel>

                <!-- Expander для ввода функций -->
                <Expander IsExpanded="True"
                          Margin="0,0,0,5"
                          Header="Ввод функций" Style="{StaticResource GlowingExpanderStyle}">
                    <Grid Background="#FF001830" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Функция 1-->
                        <GroupBox Grid.Column="0" Style="{StaticResource GlowingGroupBoxStyleA}"
                                  Header="Функция 1" >
                            <StackPanel>
                                <TextBox x:Name="Function1Input"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         Text="{Binding Function1Input}"
                                         Margin ="5"
                                         Height= "25"
                                         />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button Content="Из номера"
                                            Command="{Binding BuildFunction1FromNumberCommand}"
                                            Style="{StaticResource GlowButtonStyle}"
                                            Margin="5"
                                            Padding="10, 3"/>
                                    <Button Content="Из формулы"
                                            Style="{StaticResource GlowButtonStyle}"
                                            Command="{Binding BuildFunction1FromFormulaCommand}"
                                            Margin="5"
                                            Padding="10, 3"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Функция 2 -->
                        <GroupBox Grid.Column="2" Style="{StaticResource GlowingGroupBoxStyleB}"
                                  Header="Функция 2">
                            <StackPanel>
                                <TextBox x:Name="Function2Input"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         Text="{Binding Function2Input}"
                                         Margin="5"
                                         Height="25" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button Content="Из номера"
                                            Style="{StaticResource GlowButtonStyle}"
                                            Command="{Binding BuildFunction2FromNumberCommand}"
                                            Margin="5"
                                            Padding="10, 3" />
                                    <Button Content="Из формулы"
                                            Style="{StaticResource GlowButtonStyle}"
                                            Command="{Binding BuildFunction2FromFormulaCommand}"
                                            Margin="5"
                                            Padding="10, 3" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Expander>

                <Expander Header="Результаты для Функции 1"
                          Margin="0,0,0,5" Style="{StaticResource GlowingExpanderStyleA}">
                    <TabControl Style="{StaticResource GlowingTabControlStyle}">
                        <TabControl.Resources>
                            <Style TargetType="TabItem" BasedOn="{StaticResource GlowingTabItemStyle}"/>
                        </TabControl.Resources>
                        <TabItem Header="Таблица истинности">
                            <DataGrid Style="{StaticResource GlowingDataGridStyle}" ItemsSource="{Binding TruthTable1, Mode=OneWay}"
                                      AutoGenerateColumns="True"
                                      IsReadOnly="True"
                                      Margin="5" />
                        </TabItem>
                        <TabItem Header="DNF/KNF">
                            <StackPanel Margin="5">
                                <TextBlock Text="Дизъюнктивная нормальная форма (DNF):"
                                         FontWeight="Bold" />
                                <TextBox Text="{Binding Dnf1, Mode=OneWay}"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         Height="60"
                                         Margin="0, 5, 0, 10" />
                                <TextBlock Text="Конъюнктивная нормальная форма (KNF):"
                                         FontWeight="Bold" />
                                <TextBox Text="{Binding Knf1, Mode=OneWay}"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         Height="60"
                                         Margin="0, 5, 0, 0" />
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="Стоимость">
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Cost1, Mode=OneWay}"
                                           FontSize="14" />
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Expander>

                <!-- Expander для Функции 2 -->
                <Expander Header="Результаты для функции 2"
                          Margin="0,0,0,5" Style="{StaticResource GlowingExpanderStyleB}">

                    <TabControl Style="{StaticResource GlowingTabControlStyle}">
                        <TabControl.Resources>
                            <Style TargetType="TabItem" BasedOn="{StaticResource GlowingTabItemStyle}"/>
                        </TabControl.Resources>
                        <TabItem Header="Таблица истинности">
                            <DataGrid Style="{StaticResource GlowingDataGridStyle}" ItemsSource="{Binding TruthTable2, Mode=OneWay}"
                                      AutoGenerateColumns="True"
                                      IsReadOnly="True"
                                      Margin="5" />
                        </TabItem>
                        <TabItem Header="DNF/KNF">
                            <StackPanel Margin="5">
                                <TextBlock Text="Дизъюнктивная нормальная форма (DNF):"
                                           FontWeight="Bold" />
                                <TextBox Text="{Binding Dnf2, Mode=OneWay}"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         Height="60"
                                         Margin="0,5,0,10" />
                                <TextBlock Text="Конъюнктивная нормальная форма (KNF):"
                                           FontWeight="Bold" />
                                <TextBox Text="{Binding Knf2, Mode=OneWay}"
                                         Style="{StaticResource GlowingTextBoxStyle}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         Height="60"
                                         Margin="0,5,0,10" />
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Стоимость">
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Cost2, Mode=OneWay}"
                                           FontSize="14" />
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Expander>

                <!-- Expander для проверки эквивалентности -->
                <Expander   Header="Проверка эквивалентности"
                          IsExpanded="True" Style="{StaticResource GlowingExpanderStyle}">
                    <StackPanel Margin="5">
                        <Button Content="Проверить эквивалентность"
                                Command="{Binding CheckEquivalenceCommand}"
                                HorizontalAlignment="Center"
                                Padding="15, 5"
                                Margin="0, 10" Style="{StaticResource GlowButtonStyle}"/>
                        <Border CornerRadius="5"
        Margin="0, 10"
        Padding="10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEquivalent}" Value="True">
                                            <Setter Property="Background" Value="#1A84FFD9"/>
                                            <Setter Property="BorderBrush" Value="#FF93ff85"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF93ff85" Opacity="0.6"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsEquivalent}" Value="False">
                                            <Setter Property="Background" Value="#1Aff858e"/>
                                            <Setter Property="BorderBrush" Value="#FFff858e"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FFff858e" Opacity="0.6"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="{Binding EquivalenceMessage, Mode=OneWay}" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource GlowingTextBlockStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEquivalent}" Value="True">
                                                <Setter Property="Foreground" Value="#FF93ff85"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF93ff85" Opacity="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsEquivalent}" Value="False">
                                                <Setter Property="Foreground" Value="#FFff858e"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FFff858e" Opacity="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <StatusBar Grid.Row="2" 
           Style="{StaticResource GlowingStatusBarStyle}">
            <StatusBarItem Style="{StaticResource GlowingStatusBarItemStyle}">
                <TextBlock Text="{Binding StatusMessage, Mode=OneWay}" 
                   Style="{StaticResource GlowingTextBlockStyle}"
                   FontSize="12"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
